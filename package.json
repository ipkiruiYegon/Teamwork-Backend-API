{
  "name": "teamwork-backend-api",
  "version": "1.0.0",
  "description": "API server for a internal social network",
  "main": "./src/index.js",
  "scripts": {
    "rdist": "babel src -d dist --source-maps",
    "build": "NODE_ENV=development npm-run-all clean rdist",
    "server": "babel-node ./src/index.js",
    "serve": "NODE_ENV=production exec babel-node ./dist/index.js",
    "start": "npm run prod",
    "coverage": "nyc npm run test",
    "coverage_instanbul": "istanbul cover npm run test --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "server:prod": "node ./dist/index.js",
    "dev": "NODE_ENV=development DEBUG=teamwork-backend-api:debug npm-run-all server",
    "dbTables": "node db.js createTables",
    "dropTables": "node db.js dropTables",
    "dbAlterTables": "node db.js alterTables",
    "dbUser": "node db.js createSuperUser",
    "dbNormalUser": "node db.js createNormalUser",
    "migrateDev": "NODE_ENV=development npm-run-all dbTables dbAlterTables dbUser",
    "migrateProd": "NODE_ENV=production npm-run-all dropTables dbTables dbAlterTables dbUser",
    "clean": "rimraf dist",
    "prod": "NODE_ENV=production npm-run-all clean build migrateProd server:prod",
    "testDb": "npm-run-all dropTables dbTables dbAlterTables dbUser dbNormalUser",
    "tests": "mocha --timeout 20000 tests/ --require @babel/register --recursive --exit",
    "test": "NODE_ENV=test npm-run-all testDb tests",
    "travis": "NODE_ENV=travis npm-run-all testDb clean build",
    "test:watch": "mocha tests/ --reporter  spec --NODE_ENV=development --DEBUG=server:debug --exec --require @babel/register babel-node  watch",
    "eslint": "eslint src/**/*.js --ignore-pattern \"node_modules/\"",
    "eslint-fix": "eslint src/**/*.js --ignore-pattern \"node_modules/\" --fix",
    "watch": "NODE_ENV=development DEBUG=teamwork-backend-api:debug nodemon ./src/index.js --exec babel-node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipkiruiYegon/Teamwork-Backend-API.git"
  },
  "author": "Yegon Kipkirui Geoffrey",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ipkiruiYegon/Teamwork-Backend-API/issues"
  },
  "homepage": "https://github.com/ipkiruiYegon/Teamwork-Backend-API#readme",
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.21.0",
    "core-util-is": "^1.0.2",
    "cors": "^2.8.5",
    "datauri": "^2.0.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "moment": "^2.24.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.16",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "pg": "^7.18.2",
    "randomstring": "^1.1.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-arrow-functions": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^10.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.2.3",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2"
  }
}
